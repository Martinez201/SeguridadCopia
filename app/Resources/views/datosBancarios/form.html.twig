{% extends 'navegacion.html.twig' %}

{% block content %}

    <h1>
        {% if datos.id %}
            Datos del cliente {{ datos.cliente }}
        {% else %}
            AÃ±adir  datos bancarios
        {% endif %}
    </h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Guardar</button>
    {% if not datos.id %}
        <button type="reset" class="btn btn-warning"><i class="fas fa-eraser"></i> Limpiar</button>
    {% else %}
        <a href="{{ path('app_datosbancarios_eliminar',{'id': datos.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i> Borrar datos bancarios</a>
    {% endif %}
    <a href="{{ path('clientes_Listar') }}" class="btn btn-info"><i class="fas fa-arrow-alt-circle-left"></i> Volver al listado de clientes</a>

    {{ form_end(form) }}
{% endblock %}

{% block title %}
    Clientes
{% endblock %}

