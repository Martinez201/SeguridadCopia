{% extends 'navegacion.html.twig' %}

{% block content %}
    <h1>Menú Presupuestos</h1>
    <a href="{{ path('portada') }}" class="btn btn-info"><i class="fas fa-arrow-alt-circle-left"></i> Volver atrás</a>
    <div class="box">
        <div class="container">
            <div class="row">
                {% if is_granted('ROLE_COMERCIAL') %}
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

                        <div class="box-part text-center">

                            <i class="fa fa-list-ul fa-3x" aria-hidden="true"></i>

                            <div class="title">
                                <h4>Listado Presupuestos</h4>
                            </div>

                            <div class="text">
                                <span>Listados de los presupuestos</span>
                            </div>

                            <a href="{{ path('presupuestos_Listar') }}" class="btn btn-warning">Ir al listado</a>

                        </div>
                    </div>
                {% endif %}
                {% if is_granted('ROLE_COMERCIAL') %}
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

                        <div class="box-part text-center">

                            <i class="fa fa-plus-circle fa-3x" aria-hidden="true"></i>

                            <div class="title">
                                <h4>Añadir Presupuesto</h4>
                            </div>

                            <div class="text">
                                <span>Dar de alta a un presupuesto</span>
                            </div>

                            <a href="{{ path('altas_presupuestos') }}" class="btn btn-warning">Añadir Presupuesto</a>

                        </div>
                    </div>
                {% endif %}
                {% if is_granted('ROLE_COMERCIAL') %}
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

                        <div class="box-part text-center">

                            <i class="fa fa-passport fa-3x" aria-hidden="true"></i>

                            <div class="title">
                                <h4>Documentación</h4>
                            </div>

                            <div class="text">
                                <span>Generar contratos de Clientes</span>
                            </div>

                            <a href="{{ path('presupuesto_documentacion') }}" class="btn btn-warning">Generar contratos</a>

                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}
    Menú Presupuestos
{% endblock %}

