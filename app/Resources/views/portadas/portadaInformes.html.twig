{% extends 'navegacion.html.twig' %}

{% block content %}
    <h1>Menú Informes</h1>
    <a href="{{ path('portada') }}" class="btn btn-info"><i class="fas fa-arrow-alt-circle-left"></i> Volver atrás</a>
    <div class="box">
        <div class="container">
            <div class="row">
                {% if is_granted('ROLE_ADMINISTRADOR') %}
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

                        <div class="box-part text-center">

                            <i class="fa fa-file-powerpoint fa-3x" aria-hidden="true"></i>

                            <div class="title">
                                <h4>Empleados Informe</h4>
                            </div>

                            <div class="text">
                                <span>Generar Informe de los empleados</span>
                            </div>

                            <a href="{{ path('empleado_informe') }}" class="btn btn-warning">Generar informe</a>

                        </div>
                    </div>
                {% endif %}
                {% if is_granted('ROLE_GESTOR') %}
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

                        <div class="box-part text-center">

                            <i class="fa fa-file-powerpoint fa-3x" aria-hidden="true"></i>

                            <div class="title">
                                <h4>Facturas Informe</h4>
                            </div>

                            <div class="text">
                                <span>Generar Informe de las facturas emitidas</span>
                            </div>

                            <a href="{{ path('facturas_informes') }}" class="btn btn-warning">Generar informe</a>

                        </div>
                    </div>
                {% endif %}
                {% if is_granted('ROLE_GESTOR') %}
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

                        <div class="box-part text-center">

                            <i class="fa fa-file-powerpoint fa-3x" aria-hidden="true"></i>

                            <div class="title">
                                <h4>Clientes Informe</h4>
                            </div>

                            <div class="text">
                                <span>Generar Informe de Clientes</span>
                            </div>

                            <a href="{{ path('cliente_informe') }}" class="btn btn-warning">Generar informe</a>

                        </div>
                    </div>
                {% endif %}
                {% if is_granted('ROLE_COMERCIAL') %}
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

                        <div class="box-part text-center">

                            <i class="fa fa-file-powerpoint fa-3x" aria-hidden="true"></i>

                            <div class="title">
                                <h4>Presupuestos Informe</h4>
                            </div>

                            <div class="text">
                                <span>Generar Informe de presupuestos</span>
                            </div>

                            <a href="{{ path('presupuestos_informe') }}" class="btn btn-warning">Generar informe</a>

                        </div>
                    </div>
                {% endif %}
                {% if is_granted('ROLE_INSTALADOR') %}

                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

                        <div class="box-part text-center">

                            <i class="fa fa-file-powerpoint fa-3x" aria-hidden="true"></i>

                            <div class="title">
                                <h4>Partes informe</h4>
                            </div>

                            <div class="text">
                                <span>Generar Informe de partes de trabajo</span>
                            </div>

                            <a href="{{ path('partes_informe') }}" class="btn btn-warning">Generar informe</a>

                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}
Menú Informes
{% endblock %}

