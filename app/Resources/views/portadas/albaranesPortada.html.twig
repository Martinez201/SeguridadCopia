{% extends 'navegacion.html.twig' %}

{% block content %}
    <h1 class="bg-navegacion-cabecera">Menú Albaranes</h1>
    <a href="{{ path('portada') }}" class="btn bg-info2"><i class="fas fa-arrow-alt-circle-left"></i> Volver atrás</a>
    <div class="box">
        <div class="container">
            <div class="row">
                {% if is_granted('ROLE_GESTOR') %}
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

                        <div class="box-part text-center">

                            <i class="fa fa-list-ul fa-3x" aria-hidden="true"></i>

                            <div class="title">
                                <h4>Listado Albaranes</h4>
                            </div>

                            <div class="text">
                                <span>Listados de los albaranes</span>
                            </div>

                            <a href="{{ path('albaranes_Listar') }}" class="btn bg-warning2">Ir al listado</a>

                        </div>
                    </div>
                {% endif %}
                {% if is_granted('ROLE_GESTOR') %}
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

                        <div class="box-part text-center">

                            <i class="fa fa-plus-circle fa-3x" aria-hidden="true"></i>

                            <div class="title">
                                <h4>Añadir Albarán</h4>
                            </div>

                            <div class="text">
                                <span>Dar de alta a un albarán</span>
                            </div>

                            <a href="{{ path('altas_albaranes') }}" class="btn bg-warning2">Añadir Albarán</a>

                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}
    Menú Albaranes
{% endblock %}
