{% extends 'navegacion.html.twig' %}

{% block formularios %}

    <h1 class="mb-5 bg-navegacion-cabecera">
        {% if factura.id %}
            Factura {{ factura.id }}
        {% else %}
            Alta factura
        {% endif %}
    </h1>
    <a href="{{ path('factura_portada') }}" class="btn bg-info2 mt-5 mb-5"><i class="fas fa-arrow-alt-circle-left"></i> Volver atr√°s</a>
<div class="bg-cuadrosNavegacion p-5">
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit" class="btn bg-success2 mt-5"><i class="fas fa-save"></i> Guardar</button>
    {% if not factura.id %}
        <button type="reset" class="btn bg-warning2 mt-5"><i class="fas fa-broom"></i> Limpiar</button>
    {% else %}
        <a href="{{ path('facturas_eliminar',{'id': factura.id}) }}" class="btn bg-danger2 mt-5"><i class="fas fa-trash"></i> Borrar</a>
    {% endif %}
    <a href="{{ path('facturas_Listar') }}" class="btn bg-info2 mt-5"><i class="fas fa-arrow-alt-circle-left"></i> Ir al listado</a>
    {{ form_end(form) }}
</div>
    {% endblock %}

{% block title %}
    Facturas
{% endblock %}

