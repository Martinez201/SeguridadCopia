{% extends 'base.html.twig' %}

{% block body %}

    <div id="wrapper" class="animate">
        <nav class="navbar header-top fixed-top navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="#">RobCo Security</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarText">
                <ul class="navbar-nav animate side-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#" title="Pagina Principal"><i class="fas fa-home"></i>Inicio<i class="fas fa-home shortmenu animate"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('clientes_Listar') }}" title="Clientes"><i class="fas fa-briefcase"></i> Clientes <i class="fas fa-briefcase shortmenu animate"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('partes_Listar') }}" title="Partes"><i class="fas fa-clipboard-check"></i> Partes <i class="fas fa-clipboard-check shortmenu animate"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('empleados_listar') }}" title="Empleados"><i class="fas fa-user-friends"></i> Empleados <i class="fas fa-user-friends shortmenu animate"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('facturas_Listar') }}" title="Facturas"><i class="fas fa-file-invoice-dollar"></i> Facturas <i class="fas fa-file-invoice-dollar shortmenu animate"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('albaranes_Listar') }}" title="Albaranes"><i class="fas fa-file-signature"></i> Albaranes <i class="fas fa-file-signature shortmenu animate"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('productos_Listar') }}" title="Almacén"><i class="fas fa-industry"></i> Almacén <i class="fas fa-industry shortmenu animate"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('presupuestos_Listar') }}" title="Presupuestos"><i class="fas fa-file-alt"></i> Presupuestos <i class="fas fa-file-alt shortmenu animate"></i></a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-md-auto d-md-flex">
                    {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="fas fa-user"></i> Perfil</a>
                    </li>
                    {% endif %}
                    <li class="nav-item">
                        {% if app.user %}
                            <a class="nav-link" href="{{ path('usuario_salir') }}"><i class="fas fa-sign-out-alt"></i> Salir</a>
                        {% else %}
                            <a class="nav-link" href="{{ path('usuario_entrar') }}"><i class="fas fa-sign-in-alt"></i> Entrar</a>
                        {% endif %}
                    </li>
                </ul>
            </div>
        </nav>
        <div class="container">
            {% for mensaje in app.session.flashBag.get('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ mensaje }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
                        <span aria-hidden="true">x</span>
                    </button>
                </div>
            {% endfor %}
            {% for mensaje in app.session.flashBag.get('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ mensaje }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
                        <span aria-hidden="true">x</span>
                    </button>
                </div>
            {% endfor %}
            {%  block content %}{% endblock %}
        </div>
    </div>


{% endblock %}