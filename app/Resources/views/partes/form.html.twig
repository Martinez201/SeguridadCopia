{% extends 'navegacion.html.twig' %}


{% block title %}
    Alta Parte
{% endblock %}


{% block content %}

    <h1>
        {% if parte.id %}
            Parte{{ parte.id }}
        {% else %}
            Alta Parte
        {% endif %}
    </h1>

    {{ form_start(form) }}
    {{ form_widget(form) }}

    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Guardar</button>

    <a href="{{ path('partes_Listar') }}" class="btn btn-info"><i class="fas fa-arrow-alt-circle-left"></i> Volver al listado</a>
    {% if not parte.id %}
        <button type="reset" class="btn btn-warning"><i class="fas fa-broom"></i> Limpiar</button>
    {% else %}
        <a href="{{ path('partes_eliminar',{'id': parte.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i> Dar de baja</a>
    {%  endif %}

    {{ form_end(form) }}

{% endblock %}

