{% extends 'navegacion.html.twig' %}


{% block title %}
    Alta Parte
{% endblock %}


{% block content %}

    <h1>
        {% if parte.id %}
            Parte{{ parte.id }}
        {% else %}
            Alta Parte
        {% endif %}
    </h1>
    <a href="{{ path('parte_portada') }}" class="btn btn-info mt-5 mb-5"><i class="fas fa-arrow-alt-circle-left"></i> Volver atr√°s</a>
    {{ form_start(form) }}
    {{ form_widget(form) }}

    <button type="submit" class="btn btn-success mt-5"><i class="fas fa-save"></i> Guardar</button>

    <a href="{{ path('partes_Listar') }}" class="btn btn-info mt-5"><i class="fas fa-arrow-alt-circle-left"></i> Ir al listado</a>
    {% if not parte.id %}
        <button type="reset" class="btn btn-warning mt-5"><i class="fas fa-broom"></i> Limpiar</button>
    {% else %}

        {% if is_granted('ROLE_GESTOR') %}
        <a href="{{ path('partes_eliminar',{'id': parte.id}) }}" class="btn btn-danger mt-5"><i class="fas fa-trash"></i> Dar de baja</a>
        {% endif %}

    {%  endif %}

    {{ form_end(form) }}

{% endblock %}

