{%  extends 'navegacion.html.twig' %}


{% block content %}

    {% if error %}

        <div class="alert alert-danger">
            {{ error.message }}
        </div>

    {% endif %}

    <body>
    <div id="login">
        <h3 class="text-center text-white pt-5 bg-navegacion-cabecera">Iniciar Sesión</h3>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="" method="post">
                            <h3 class="text-center text-dark">Datos de acceso</h3>
                            <div class="form-group">
                                <label for="username" class="text-dark">Usuario:</label><br>
                                <input type="text" name="_username" id="username" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-dark">Contraseña:</label><br>
                                <input type="password" name="_password" id="password" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="submit" name="submit" class="btn bg-warning2 btn-md" value="Entrar">
                                <p class="mt-auto"></p>
                            </div>
                            <div id="register-link" class="text-right">
                                <br>
                                <br>
                                <br>
                                <a href="{{ path('restablecer_clave_login') }}" class="text-info">¿Has olvidado tu contraseña?</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </body>

{% endblock %}
        {% block title %}

        Iniciar Sesión

        {% endblock %}