{% extends 'navegacion.html.twig' %}

{% block title %}
    Productos
{% endblock %}


{% block content %}

    <h1>Productos</h1>
    <a href="{{ path('producto_portada') }}" class="btn btn-info"><i class="fas fa-arrow-alt-circle-left"></i> Volver atr√°s</a>
    <table class="table table-bordered table-striped text-center">
        <thead class="thead-dark">
        <tr>
            <td>Editar</td>
            <td>Imagen</td>
            <td>Nombre</td>
            <td>Tipo</td>
            <td>Precio</td>
            <td>Stock</td>
        </tr>
        </thead>
        <tbody>
        {% for producto in paginador.currentPageResults %}
            <tr>
                <td><a href="{{ path('productos_form',{'id': producto.id}) }}" class="btn btn-primary"><i class="fas fa-pen"></i></a></td>
                <td><img src="{% if producto.imagen %} {{ asset('imagenesProductos/') }}{{ producto.imagen }} {% else %} {{ asset('imagenesProductos/sin-imagen12.jpg') }}{% endif %}" width="100px"></td>
                <td>{{ producto.nombre }}</td>
                <td>{{ producto.tipo }}</td>
                <td>{{ producto.precio }}</td>
                <td>{{ producto.cantidad}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if paginador and paginador.haveToPaginate %}
        {{ pagerfanta(paginador,'twitter_bootstrap4') }}
    {% endif %}
{% endblock %}