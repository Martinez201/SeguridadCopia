{% extends 'navegacion.html.twig' %}

{% block formularios %}

    <h1 class="mb-5 bg-navegacion-cabecera">
        {% if producto.id %}
            Producto {{ producto.nombre }}
        {% else %}
            Alta producto
        {% endif %}
    </h1>
    <a href="{{ path('producto_portada') }}" class="btn bg-info2 mt-5 mb-5"><i class="fas fa-arrow-alt-circle-left"></i> Volver atr√°s</a>
<div class="bg-cuadrosNavegacion p-5">
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_row(form.imagen) }}
    <button type="submit" class="btn bg-success2 mt-5"><i class="fas fa-save"></i> Guardar</button>
    {% if not producto.id %}
        <button type="reset" class="btn bg-warning2 mt-5"><i class="fas fa-broom"></i> Limpiar</button>
    {% else %}
        <a href="{{ path('productos_eliminar',{'id': producto.id}) }}" class="btn bg-danger2 mt-5"><i class="fas fa-trash"></i> Borrar</a>
    {% endif %}
    <a href="{{ path('productos_Listar') }}" class="btn bg-info2 mt-5"><i class="fas fa-arrow-alt-circle-left"></i> Ir al listado </a>
    {{ form_end(form) }}
</div>
{% endblock %}

{% block title %}
    Productos
{% endblock %}

