{% extends 'navegacion.html.twig' %}

{% block title %}
    RobCo Security
{% endblock %}
{% block content %}
    <h1>Menú Principal</h1>
<div class="box">
    <div class="container">
        <div class="row">
            {% if is_granted('ROLE_COMERCIAL') %}
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

                <div class="box-part text-center">

                    <i class="fas fa-briefcase fa-3x" aria-hidden="true"></i>

                    <div class="title">
                        <h4>Clientes</h4>
                    </div>

                    <div class="text">
                        <span>Gestión de los clientes de la empresa.</span>
                    </div>

                    <a href="{{ path('clientes_Listar') }}" class="btn btn-warning">Ir a clientes</a>

                </div>
            </div>
            {% endif %}
            {% if is_granted('ROLE_INSTALADOR') %}
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

                <div class="box-part text-center">

                    <i class="fa fa-clipboard-check fa-3x" aria-hidden="true"></i>

                    <div class="title">
                        <h4>Partes de Trabajo</h4>
                    </div>

                    <div class="text">
                        <span>Gestión de los partes de trabajo de la empresa.</span>
                    </div>

                    <a href="{{ path('partes_Listar') }}" class="btn btn-warning">Ir a Partes</a>

                </div>
            </div>
            {% endif %}
            {% if is_granted('ROLE_GESTOR') %}
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

                <div class="box-part text-center">

                    <i class="fas fa-file-invoice-dollar fa-3x" aria-hidden="true"></i>

                    <div class="title">
                        <h4>Facturas</h4>
                    </div>

                    <div class="text">
                        <span>Gestión de las facturas de la empresa.</span>
                    </div>

                    <a href="{{ path('facturas_Listar') }}" class="btn btn-warning">Ir a facturas</a>

                </div>
            </div>
            {% endif %}
            {% if is_granted('ROLE_ADMINISTRADOR') %}
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

                <div class="box-part text-center">

                    <i class="fas fa-user-friends fa-3x" aria-hidden="true"></i>

                    <div class="title">
                        <h4>Empleados</h4>
                    </div>

                    <div class="text">
                        <span>Gestión de los empleados de la empresa</span>
                    </div>

                    <a href="{{ path('empleados_listar') }}" class="btn btn-warning">Ir a empleados</a>

                </div>
            </div>
            {% endif %}
            {% if is_granted('ROLE_GESTOR') %}
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

                <div class="box-part text-center">

                    <i class="fas fa-file-signature fa-3x" aria-hidden="true"></i>

                    <div class="title">
                        <h4>Albaranes</h4>
                    </div>

                    <div class="text">
                        <span>Gestión de los albaranes de compra de la empresa</span>
                    </div>

                    <a href="{{ path('albaranes_Listar') }}" class="btn btn-warning">Ir a albaranes</a>

                </div>
            </div>
            {% endif %}
            {% if is_granted('ROLE_ADMINISTRADOR') %}
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

                <div class="box-part text-center">

                    <i class="fas fa-industry fa-3x" aria-hidden="true"></i>

                    <div class="title">
                        <h4>Almacén</h4>
                    </div>

                    <div class="text">
                        <span>Gestión del inventario de productos de la empresa</span>
                    </div>

                    <a href="{{ path('productos_Listar') }}" class="btn btn-warning">Ir a almacén</a>

                </div>
            </div>
            {% endif %}
            {% if is_granted('ROLE_COMERCIAL') %}
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

                <div class="box-part text-center">

                    <i class="fas fa-file-alt fa-3x" aria-hidden="true"></i>

                    <div class="title">
                        <h4>Presupuestos</h4>
                    </div>

                    <div class="text">
                        <span>Gestión de los presupuestos  de la empresa</span>
                    </div>

                    <a href="{{ path('presupuestos_Listar') }}" class="btn btn-warning">Ir a presupuestos</a>

                </div>
            </div>
            {% endif %}
            {% if is_granted('ROLE_ADMINISTRADOR') %}
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

                <div class="box-part text-center">

                    <i class="fas fa-building fa-3x" aria-hidden="true"></i>

                    <div class="title">
                        <h4>Delegaciones</h4>
                    </div>

                    <div class="text">
                        <span>Gestión de las delegaciones territoriales de la empresa</span>
                    </div>

                    <a href="{{ path('delegaciones_listar') }}" class="btn btn-warning">Ir a delegaciones</a>

                </div>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}