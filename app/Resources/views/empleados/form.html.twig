{% extends 'navegacion.html.twig' %}


{% block title %}
   Empleados
{% endblock %}


{% block content %}

    <h1>
        {% if empleado.id %}
            Empleado{{ empleado.id }}
        {% else %}
            Alta Empleado
        {% endif %}
    </h1>

    {{ form_start(form,{'enctype:': "multipart/form-data"}) }}
    {{ form_widget(form) }}
    {{ form_row(form.avatar) }}

    <button type="submit" class="btn btn-success">Guardar</button>

    <a href="{{ path('empleados_listar') }}" class="btn btn-info"> Volver al listado</a>
    {% if not empleado.id %}
    <button type="reset" class="btn btn-warning"> Limpiar</button>
        {% else %}
            <a href="{{ path('empleados_eliminar',{'id': empleado.id}) }}" class="btn btn-danger">Dar de baja</a>
    {%  endif %}

   

    {{ form_end(form) }}

{% endblock %}



