{% extends 'navegacion.html.twig' %}

{% block content %}
    <h1>Menú Presupuestos</h1>
    <a href="{{ path('presupuesto_portada') }}" class="btn btn-info"><i class="fas fa-arrow-alt-circle-left"></i> Volver atrás</a>
    <div class="box">
        <div class="container">
            <div class="row">
                {% if is_granted('ROLE_COMERCIAL') %}
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

                        <div class="box-part text-center">

                            <i class="fa fa-file-powerpoint fa-3x" aria-hidden="true"></i>

                            <div class="title">
                                <h4>Contrato (PDF)</h4>
                            </div>

                            <div class="text">
                                <span>Generar documentación</span>
                            </div>

                            <a href="{{ asset('Contrato.pdf') }} " target="_blank"  class="btn btn-warning"> <i class="fas fa-file-pdf"></i> Generar Contrato (PDF)</a>

                        </div>
                    </div>
                {% endif %}
                {% if is_granted('ROLE_COMERCIAL') %}
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

                        <div class="box-part text-center">

                            <i class="fa fa-file-word fa-3x" aria-hidden="true"></i>

                            <div class="title">
                                <h4>Contrato (WORD)</h4>
                            </div>

                            <div class="text">
                                <span>Generar documentación</span>
                            </div>

                            <a href="{{ asset('Contrato.odt') }} " target="_blank"  class="btn btn-warning"><i class="fas fa-file-word"></i> Generar Contrato (WORD)</a>

                        </div>
                    </div>
                {% endif %}
                {% if is_granted('ROLE_COMERCIAL') %}
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

                        <div class="box-part text-center">

                            <i class="fa fa-file-contract fa-3x" aria-hidden="true"></i>

                            <div class="title">
                                <h4>Contrato protección de datos</h4>
                            </div>

                            <div class="text">
                                <span>Generar documentación</span>
                            </div>

                            <a href="{{ asset('contrato-encargado-tratamiento.pdf') }} " target="_blank"  class="btn btn-warning"><i class="fas fa-file-contract"></i> Generar Contrato (PDF)</a>

                        </div>
                    </div>
                {% endif %}
                {% if is_granted('ROLE_COMERCIAL') %}
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

                        <div class="box-part text-center">

                            <i class="fa fa-file-invoice-dollar fa-3x" aria-hidden="true"></i>

                            <div class="title">
                                <h4>Formulario adquisición datos bancarios</h4>
                            </div>

                            <div class="text">
                                <span>Generar documentación</span>
                            </div>

                            <a href="{{ asset('datosBancarios.pdf') }} " target="_blank"  class="btn btn-warning"><i class="fas fa-file-contract"></i> Generar Contrato (PDF)</a>

                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}
    Menú Presupuestos
{% endblock %}

