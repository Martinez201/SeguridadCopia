{% extends 'navegacion.html.twig' %}


{% block title %}
    Alta Parte
{% endblock %}


{% block formularios %}

    <h1 class="mb-5 bg-navegacion-cabecera">
        {% if presupuesto.id %}
            Presupuesto{{ presupuesto.id }}
        {% else %}
            Alta presupuesto
        {% endif %}
    </h1>
    <a href="{{ path('presupuesto_portada') }}" class="btn bg-info2 mt-5 mb-5"><i class="fas fa-arrow-alt-circle-left"></i> Volver atr√°s</a>
<div class="bg-cuadrosNavegacion p-5">
    {{ form_start(form) }}
    {{ form_widget(form) }}

    <button type="submit" class="btn bg-success2 mt-5"><i class="fas fa-save"></i> Guardar</button>

    <a href="{{ path('presupuestos_Listar') }}" class="btn bg-info2 mt-5"><i class="fas fa-arrow-alt-circle-left"></i> Ir al listado</a>
    {% if not presupuesto.id %}
        <button type="reset" class="btn bg-warning2 mt-5"><i class="fas fa-broom"></i> Limpiar</button>
    {% else %}
        <a href="{{ path('presupuestos_eliminar',{'id': presupuesto.id}) }}" class="btn bg-danger2 mt-5"><i class="fas fa-trash"></i> Dar de baja</a>
    {%  endif %}

    {{ form_end(form) }}
</div>
{% endblock %}

