{% extends 'navegacion.html.twig' %}

{% block content %}

    <h1 class="mb-5">
        {% if contenido.id %}
            Contendio {{ contenido.id }}
        {% else %}
            Alta contenido
        {% endif %}
    </h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit" class="btn btn-success mt-5 "><i class="fas fa-save"></i> Guardar</button>
    {% if not contenido.id %}
        <button type="reset" class="btn btn-warning mt-5"><i class="fas fa-broom"></i> Limpiar</button>
    {% else %}
        <a href="{{ path('contenido_eliminar',{'albaran': albaran.id ,'id': contenido.id}) }}" class="btn btn-danger mt-5"><i class="fas fa-trash"></i> Borrar</a>
    {% endif %}
    <a href="{{ path('contenido_Listar',{'id': albaran.id}) }}" class="btn btn-info mt-5"><i class="fas fa-arrow-alt-circle-left"></i> Volver al listado </a>
    {{ form_end(form) }}
{% endblock %}

